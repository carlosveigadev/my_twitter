<% @my_tweets.each do | tweet | %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="img is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong>Carlos Veiga</strong><br/>
          <small>@carlosveigadev</small><br/>
          <p><%= tweet.mytweet %></p>
        </div>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to @my_tweet, class: 'level-item' do %>
              <span class="icon"><i class='fa fa-link' aria-hidden='true'</i></span>
            <% end %>
            <%= link_to edit_my_tweet_path, class: :edit, data: { confirm: 'Are you sure you want to delete this tweet?' } do %>
              <span class="icon">
                <i class="fa fa-trash-o" aria-hidden='true'></i>
              </span>
            <% end %>
            <%= link_to mytweet, method: :delete, data: { confirm: 'Are you sure you want to delete this tweet?' } do %>
              <span class="icon">
                <i class="fa fa-trash-o" aria-hidden='true'></i>
              </span>
            <% end %>

          </div>
        </nav>
      </div>
    </article>
  </div>

<% end %>