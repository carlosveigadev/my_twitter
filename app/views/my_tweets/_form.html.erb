<%= simple_form_for(@my_tweet) do |f|  %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :mytweet, label: "Tweet about it", input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }, placeholder: 'Composing a new Tweet...' %>
  </div>
</div>
<%= f.button :submit, class: 'button is-info' %>
<% end %>